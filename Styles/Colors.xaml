<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 颜色定义 -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#FF2196F3"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#FF1976D2"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#FF4CAF50"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="#FF388E3C"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#FFF44336"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#FFFF9800"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFF5F5F5"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FF212121"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#FF757575"/>
    
</ResourceDictionary>
